<div class="mws-panel grid_8">
  <div class="mws-panel-header main_header">
    <span class="mws-i-24 i-companies">Organizations</span>
  </div>
  <div class="mws-panel-body">
    <table class="mws-datatable-fn mws-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>State</th>
                <th>City</th>
                <th>Street</th>
                <th>Zip</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          <% @organizations.each do |organization| %>
            <tr class="gradeX">
                <td><%= organization.name %></td>
                <td><%= organization.role.name %></td>
                <td><%= organization.state %></td>
                <td><%= organization.city %></td>
                <td><%= organization.street %></td>
                <td><%= organization.zip %></td>
                <td><%= organization.phone %></td>
                <td><%= organization.email %></td>                
                <%= render partial: "layouts/action_button", locals: {object: organization} %>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>

<% if can? :create, Organization %>
  <div class="mws-panel grid_3 options">
    <div class="mws-panel-header">
      <span>Options</span>
    </div>

    <div class="mws-panel-body">
      <center>
        <%= link_to 'add organization', new_organization_path, class: "mws-button green" %>
      </center>
    </div>
  </div>
<% end %>
