<div class="mws-panel grid_8">
  <div class="mws-panel-header main_header">
    <span class="mws-i-24 i-group-2">Users</span>
  </div>
  <div class="mws-panel-body">
    <table class="mws-datatable-fn mws-table">
        <thead>
            <tr>
                <th>Organization</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Active</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="gradeX">
                <td><%= user.organization.name %></td>
                <td><%= user.fname %></td>
                <td><%= user.lname %></td>
                <td><%= user.email %></td>
                <td><%= user.phone %></td>
                <td><%= user.active ? "yes": "no" %></td>
                <td><%= user.role.name %></td>             
                <td>
                  <% if can? :view, user %>
                    <%= link_to 'View', user %>
                  <% end %>
                  <% if can? :edit, user %>
                    <%= link_to 'Edit', edit_user_path(user) %>
                  <% end %>
                  <% if can? :destroy, user %>
                    <%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %>
                  <% end %>
                </td> 
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>

<%= link_to 'Add user', new_user_path %>
