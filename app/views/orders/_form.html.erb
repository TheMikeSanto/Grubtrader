<div class="mws-panel grid_3">
  <div class="mws-panel-header">
    <span class="mws-i-24 i-leaf">
      Product availability
    </span>
  </div>

  <div class="mws-panel-body">
    <table id="available">
      <% Product.scoped.each do |p| %>
        <tr class="<%= p.name %>" data-unit="<%= p.unit.name %>">
          <td><%= p.name %></td>
          <td>
            <% if p.available > 0 %>
              <%= p.available %>
            <% else %>
              <span class="out">out of stock</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="mws-panel grid_5">
  <div class="mws-panel-header">
    <span class="mws-i-24 i-shopping-cart">
      <%= @order.new_record? ? "Order" : "Edit order ##{@order.id}"%>
    </span>
  </div>

  <div class="mws-panel-body">
    <%= form_for(@order, html: {class: "mws-form"}) do |f| %>
      <% if @order.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

          <ul>
          <% @order.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mws-form-inline">
        <% Product.in_stock_count.times.each_with_index do |index|%>
          <%= f.fields_for :order_lines do |lf| %>
            <% if index == 0 %>
              <% div_class = "visible"; div_style = "" %>
            <% else %>
              <% div_class = "hidden"; div_style = "display: none;" %>
            <% end %>

            <div class="line_item <%= div_class %>" style="<%= div_style %>">
              <%= render partial: "order_line", locals: {lf: lf} %>
            </div>
          <% end %>
        <% end %>

        <div class="mws-button-row">
          <% button_message = @order.new_record? ? "Add order" : "Save changes" %>
          <%= f.submit button_message, class: "mws-button red" %>
        </div>
      </div>
    <% end %>
  </div>
</div>