<div class="mws-panel grid_8">
  <div class="mws-panel-header main_header">
    <span class="mws-i-24 i-shopping-cart-4">Orders</span>
  </div>
  <div class="mws-panel-body">
    <table class="mws-datatable-fn mws-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Order #</th>
                <th>Organization</th>
                <th>User</th>
                <th>Amount</th>
                <th>Product</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr class="gradeX">
                <td><%= order.date %></td>
                <td><%= order.id %></td>
                <td><%= order.user.organization.name %></td>
                <td><%= order.user.name %></td>
                <td>40</td>
                <td>Carrots</td>
                <td><%= link_to 'Show', order %>
                    <%= link_to 'Edit', edit_order_path(order) %>
                    <%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>

<%= link_to 'New order', new_order_path %>

