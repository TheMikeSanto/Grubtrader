<div class="mws-panel grid_5 center-panel">
  <div class="mws-panel-header">
    <span class="mws-i-24 i-plus">
      <%= @donation.new_record? ? "Donate produce" : "Edit donation ##{@donation.id}"%>
    </span>
  </div>

  <div class="mws-panel-body">
    <%= form_for(@donation, html: {class: "mws-form"}) do |f| %>
      <% if @donation.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@donation.errors.count, "error") %> prohibited this donation from being saved:</h2>

          <ul>
          <% @donation.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mws-form-inline">
        <%= f.fields_for :donation_lines do |lf| %>
          <div class="mws-form-row">
            <%= lf.label "Produce type" %>
            <div class="mws-form-item small">
              <%= lf.select :product_id, options_for_product_select, include_blank: true , class: "mws-textinput" %>
              <div class="mws-info">
                If the product you would like to donate isn't on this list, please <%= link_to "contact us", "#" %>.
              </div>
            </div>
          </div>
          <div class="mws-form-row">
            <%= lf.label "Quantity to be donated" %>
            <div class="mws-form-item small quantity">
              <%= lf.text_field :quantity, class: "mws-textinput",autofocus: true %>
              pounds
            </div>
          </div>
          <div class="mws-form-row">
            <%= lf.label "Picked on " %>
            <div class="mws-form-item small date">
              <%= lf.text_field :picked_date, class: "mws-datepicker mws-textinput" %>
            </div>
          </div>
        <% end %>

        <div class="mws-button-row">
          <% button_message = @donation.new_record? ? "Add donation" : "Save changes" %>
          <%= f.submit button_message, class: "mws-button red" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
