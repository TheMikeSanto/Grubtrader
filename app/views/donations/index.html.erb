<div class="mws-panel grid_8">
  <div class="mws-panel-header main_header">
    <span class="mws-i-24 i-plus">Donations</span>
  </div>
  <div class="mws-panel-body">
    <table class="mws-datatable-fn mws-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Organization</th>
                <th>User</th>
                <th>Amount</th>
                <th>Product</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
          <% @donations.each do |donation| %>
            <tr class="gradeX">
                <td><%= donation.date %></td>
                <td><%= donation.user.organization.name %></td>
                <td><%= donation.user.name %></td>
                <td>40</td>
                <td>Carrots</td>
                <td><%= link_to 'Show', donation %>
                    <%= link_to 'Edit', edit_donation_path(donation) %>
                    <%= link_to 'Destroy', donation, confirm: 'Are you sure?', method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>

<% if can? :create, Donation %>
  <div class="mws-panel grid_3 options">
    <div class="mws-panel-header">
      <span>Options</span>
    </div>

    <div class="mws-panel-body">
      <center>
        <%= link_to 'add donation', new_donation_path, class: "mws-button green" %>
      </center>
    </div>
  </div>
<% end %>