#notifications {
	width: 300px;
	display: inline-block;
	margin-left: auto;
	margin-right: auto;
	text-align: center;
	margin: 10px 0px 0px 10px;
	padding: 10px 20px;
	border-radius: 4px;
	border: 1px solid;
}

.center-panel {
	float: none;
	margin-left: auto;
	margin-right: auto;
}

.mws-form-item.state {
	width: 40px;
}

.about hr {
	margin-bottom: 3px;
}

.about {
	padding: 10px 20px;
	font-size: 1.4em;
}

.about h4 {
	margin-bottom: 3px;
}

.about half {
	width: 45%;
	display: inline;
}

.about .data {
	font-size: 1.4em;
}

td.actions {
	min-width: 200px !important;
	max-width: 220px !important;
	width: 200px !important;
}
td.actions a {
	height: 16px;
	width: 32px;
	background-repeat: no-repeat;
	display: inline-block;
	text-decoration: none;
	margin-right: 10px;
	font-size: 9px;
	padding-left: 18px;
	text-align: left;
}

td.actions a:hover {
	background: none;
}

td.actions a.view {
	background: url(<%= asset_path "find_16.png" %>) no-repeat;
}

td.actions a.edit {
	background: url(<%= asset_path "edit_16.png" %>) no-repeat;
}

td.actions a.delete {
	background: url(<%= asset_path "cross_16.png" %>) no-repeat;
}

.options .mws-panel-header, .table .mws-panel-header {
	padding-top: 6px;
}

.options .mws-panel-header, .table .mws-panel-header {
	height: 18px;
}

#confirmation {
	text-align: center;
	width: 200px;
	padding: 20px;
}