.line_item a {
	height: 16px;
	width: 64px;
	background-repeat: no-repeat;
	display: inline-block;
	text-decoration: none;
	margin-right: 10px;
	font-size: 10px;
	padding-left: 18px;
	text-align: left;
	float: right;
}

.line_item a:hover {
	background: none;
	color: #333;
	font-weight: bold;
}

.line_item a.add {
	background: url(<%= asset_path "plus-circle.png" %>) no-repeat;
}

.line_item a.remove {
	background: url(<%= asset_path "minus-circle.png" %>) no-repeat;
}

#available {
	width: 80%;
	margin-left: auto;
	margin-right: auto;
}

#available td {
	border-bottom: 1px solid #333;
}

#available .out {
	color: red;
}